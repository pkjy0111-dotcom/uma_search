          "character_id": 0,
          "speaker_name": "老齢の店主",
          "text": "…………何をじろじろ見てやがる。 もし注文したいってんなら――",
          "flag_type": "",
          "flag": "",
          "choices": [
            {
              "next_frame": 15,
              "loop_ends_at_frame": -1,
              "text": "ぜひ“先生”のお勧めのお茶を！",
