      "background_id": 148,
      "sub_background_id": 110,
      "cg": "",
      "animated_cg": null,
      "dialogue": [
        {
          "next_frame": 9,
          "character_id": 1119,
          "speaker_name": "ドリームジャーニー",
          "text": "まあそうおっしゃらず。 今日はご依頼の古陶磁をお持ちしましたよ。",
          "flag_type": "",
          "flag": "",
          "choices": []
        }
      ]
