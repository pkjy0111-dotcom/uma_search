      "cg": "",
      "animated_cg": null,
      "dialogue": [
        {
          "next_frame": 16,
          "character_id": 90001,
          "speaker_name": "モノローグ",
          "text": "ドリームジャーニーが師と仰ぐほどの相手。 そんな人に教えを請えるチャンスは 2度とないかもしれない。",
          "flag_type": "",
          "flag": "",
          "choices": []
