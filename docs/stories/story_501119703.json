      "frame_id": 11,
      "background_id": 148,
      "sub_background_id": 110,
      "cg": "",
      "animated_cg": null,
      "dialogue": [
        {
          "next_frame": 12,
          "character_id": 90001,
          "speaker_name": "モノローグ",
          "text": "ドリームジャーニーの戻りを待つ間、 店の様子をぐるりと見渡す。",
          "flag_type": "",
          "flag": "",
          "choices": []
        }
