      "cg": "",
      "animated_cg": null,
      "dialogue": [
        {
          "next_frame": 11,
          "character_id": 1119,
          "speaker_name": "ドリームジャーニー",
          "text": "トレーナーさん。申し訳ありませんが、 しばらくお待ちいただけますか？ 土産をしまって参りますので。",
          "flag_type": "",
          "flag": "",
          "choices": []
        }
