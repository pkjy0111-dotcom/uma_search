    },
    "5": {
      "frame_id": 5,
      "background_id": 148,
      "sub_background_id": 110,
      "cg": "",
      "animated_cg": null,
      "dialogue": [
        {
          "next_frame": 6,
          "character_id": 1119,
          "speaker_name": "ドリームジャーニー",
          "text": "ええ。こちらの店主はことお茶に関して、 素晴らしい見識をお持ちなのですよ。",
          "flag_type": "",
          "flag": "",
          "choices": []
