      "sub_background_id": 110,
      "cg": "",
      "animated_cg": null,
      "dialogue": [
        {
          "next_frame": 10,
          "character_id": 1119,
          "speaker_name": "ドリームジャーニー",
          "text": "いつも通り、奥の倉庫で構いませんね？",
