      "cg": "",
      "animated_cg": null,
      "dialogue": [
        {
          "next_frame": 4,
          "character_id": 90001,
          "speaker_name": "モノローグ",
          "text": "訪れたのは大きな棚に たくさんの茶葉が並ぶお茶の専門店だった。",
          "flag_type": "",
          "flag": "",
          "choices": []
