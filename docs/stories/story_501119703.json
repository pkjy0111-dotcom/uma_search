    "6": {
      "frame_id": 6,
      "background_id": 148,
      "sub_background_id": 110,
      "cg": "",
      "animated_cg": null,
      "dialogue": [
        {
          "next_frame": 7,
          "character_id": 1119,
          "speaker_name": "ドリームジャーニー",
          "text": "浅学の身ゆえ教えを請うことも多く、 “先生”と呼ばせていただいております。",
          "flag_type": "",
          "flag": "",
          "choices": []
        }
      ]
    },
    "7": {
      "frame_id": 7,
      "background_id": 148,
      "sub_background_id": 110,
      "cg": "",
      "animated_cg": null,
      "dialogue": [
        {
          "next_frame": 8,
          "character_id": 0,
          "speaker_name": "老齢の店主",
          "text": "ふん。その割にさっぱり顔を見せんで。 薄情な弟子よ。",
          "flag_type": "",
          "flag": "",
          "choices": []
        }
      ]
    },
